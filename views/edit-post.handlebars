<article>
    <a href="/dashboard">&larr; Back to dashboard</a>
    <div class="card">
    <h2>Edit post</h2>
    <form class="edit-post-form">
        <div class="container">
          <div class="row">
            <input name="post-title" type="text" value="{{post.title}}"/>
        </div>
        <div class="row">
            <input name="post-body" type="text" value="{{post.post_text}}"/>            |
        </div>
        </div>
        <div>by you on {{format_date post.created_at}}
                    |
                    <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment"
                        post.comments.length}}</a>
        </div>
        <button id="save" class="edit-btn" type="submit">Save post</button>
        <button id="delete" class="delete-btn" type="button">Delete post</button>
    </form>
    </div>
</div>
</article>

<div class="card">
  <div class="card=body">
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button id="comment-btn" type="submit">add comment</button>
  </div>
</form>
  </div>
</div>

{{> comments post.comments}}

