<div class="card w-80 p-2 mb-2">
  <div class="comments">
    {{#each this}}
      <section class="comment mb3">
        <div class="meta">
          {{user.username}}
          on
          {{format_date created_at}}
        </div>
        <div class="text">
          {{comment_text}}
        </div>
      </section>
    {{/each}}
  </div>
</div>