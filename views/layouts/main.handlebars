<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Tech Blog</title>
    <script
      src="https://kit.fontawesome.com/5236273f2a.js"
      crossorigin="anonymous"
    ></script>

    <link
      href="https://fonts.googleapis.com/css2?family=Sora:wght@300&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>
    <div class="wrapper">
      <header class="container mt-1 pt-1">
        <div class="row">
          <div class="col mt-1">
            <h1><i class="fa-solid fa-code"></i>
              The Tech Blog</h1>
          </div>
          <div class="col mt-3">
            <nav>
              <a class="nav-item" href="/">Home</a>

              <a class="nav-item" href="/dashboard" id="dashboard">Dashboard</a>
              {{#if loggedIn}}
                <a class="nav-item" id="logout">Logout</a>
              {{else}}
                <a class="nav-item" href="/login">Login</a>
              {{/if}}
            </nav>
          </div>
        </div>
      </header>

      <main class="container d-flex flex-column align-content-center mt-4">
        {{{body}}}
      </main>

      <footer class="text-center mb-2 mt-2">
        Thanks for Visiting!
      </footer>
    </div>
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>

</html>